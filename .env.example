# ===== Настройки загрузки =====
FORCE_RELOAD=false
SKIP_LOAD=false
ENABLE_PERIODIC_SYNC=false

# ===== ChromaDB =====
CHROMA_DB_PATH=/app/data/chroma_db
CHROMA_COLLECTION=confluence_index

# ===== Confluence =====
CONFLUENCE_URL=https://confluence.infodev.ru
CONFLUENCE_API_KEY=
CONFLUENCE_SPACE_NAME=ROAD

# ===== Ollama =====
OLLAMA_MODEL=llama3.1
OLLAMA_HOST=http://ollama:11434

# ===== Redis =====
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_TTL_SECONDS=3600

# ===== RAG Pipeline =====
FORCE_CPU=false
RETRIEVAL_TOP_K=15
RERANK_TOP_K=10
RERANK_MIN_SCORE=0.50
RERANKER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2
MAX_CONTEXT_TOKENS=4096
INCLUDE_SECTION_IN_PROMPT=true
RESPONSE_FORMAT=markdown
ALWAYS_SHOW_SOURCES=true
MAX_SOURCE_LINKS=3

# ===== Чанкинг =====
CHUNK_SIZE=1300
CHUNK_OVERLAP=150
CHUNK_SEPARATORS="\n\n,\n,. , ,"

# ===== Расширение контекста =====
SEARCH_NEIGHBOR_WINDOW=2
SEARCH_NEIGHBOR_SCORE_MULTIPLIER=0.7

# ===== Telegram Bot =====
TELEGRAM_ENABLED=true
TELEGRAM_BOT_TOKEN=
TELEGRAM_WEBHOOK_URL=
TELEGRAM_WEBHOOK_PORT=8443

# ===== Логирование =====
LOG_LEVEL=INFO
PYTHONUNBUFFERED=1
TOKENIZERS_PARALLELISM=true